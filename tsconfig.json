{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "strict": true,
    "declaration": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "declarationMap": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "outDir": "./dist"
    // "rootDir": "./src"
  },
  // "include": [
  //   // "**/*.{js,ts,svelte}"
  //   "src/**/*.ts",
  //   "src/**/*.js",
  //   "src/**/*.svelte",
  //   "tests/**/*.{js,ts,svelte}"
  // ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
